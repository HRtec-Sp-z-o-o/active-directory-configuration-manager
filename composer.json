{
  "name": "magium/configuration-manager",
  "description": "Provides a generic plugable configuration management interface similar to Magento",
  "minimum-stability": "stable",
  "license": "ASL-2.0",
  "authors": [
    {
      "name": "Kevin Schroeder",
      "email": "kschroeder@magiumlib.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Magium\\Configuration\\": "lib/",
      "Magium\\Configuration\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "~5.7",
    "zendframework/zend-psr7bridge": "^0.2",
    "zendframework/zend-di": "^2.6",
    "guzzlehttp/psr7": "^1.4"
  },
  "require": {
    "zendframework/zend-cache": "^2.0",
    "psr/container": "^1",
    "zendframework/zend-db": "^2.0",
    "symfony/console": "^2",
    "psr/http-message": "^1.0",
    "symfony/yaml": "^2",
    "zendframework/zend-view": "^2.0",
    "zendframework/zend-http": "^2.0",
    "zendframework/zend-form": "^2.0",
    "zendframework/zend-i18n": "^2.0"
  },
  "suggest": {
    "zendframework/zend-psr7bridge": "^0.1"
    },
  "bin": ["bin/magium-configuration"]
}
